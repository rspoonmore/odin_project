<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
<body>
  <h1><%= title %></h1>
  <%- include("../partials/errors.ejs") %>
  <form action="/<%= item.id %>/update" method="POST">
    <label for="category">Category: </label>
    <input type="text" name="category" id="category"  value = "<%= item.category %>" required>
    <label for="item_desc">Item: </label>
    <input type="text" name="item_desc" id="item_desc" value = "<%= item.item_desc %>" required>
    <label for="quantity">Quantity: </label>
    <input type="number" min="0" max="100" name="quantity" id="quantity" value= "<%= item.quantity %>" required>
    <button type="submit">Submit</button>
  </form>
  <a href="/">Back to home</a>
</body>
</html>
