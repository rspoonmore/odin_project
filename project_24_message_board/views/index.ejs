<!-- index.ejs -->
<html>
  <head>
    <title>Mini Messageboard</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <% messages.forEach((message) => { %>
        <%- include('message', {text: message.text, user: message.user, date: message.added, link: `/messages/${message.id}`}); %>
    <% }); %>

    <a class='btn' href="/new">Add new message</a>
  </body>
</html>
